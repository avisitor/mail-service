{
  "name": "mail-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "PORT=3100 NODE_ENV=development nodemon --watch src --ext ts,js,json --signal SIGTERM --exec \"node --loader ts-node/esm src/server.ts\"",
    "dev:esm": "NODE_ENV=development node --loader ts-node/esm src/server.ts",
    "dev:frontend": "tsc --watch --preserveWatchOutput --project tsconfig.json & nodemon --watch dist/src/frontend/main.js --exec 'node scripts/copy-frontend.cjs'",
    "build": "tsc -p tsconfig.json",
    "postbuild": "npm run build:frontend",
    "build:frontend": "mkdir -p dist/src/frontend && cp -f src/frontend/index.html src/frontend/styles.css dist/src/frontend/ && node scripts/copy-frontend.cjs",
    "copy:frontend": "node scripts/copy-frontend.cjs",
    "start": "node dist/src/server.js",
    "lint": "eslint . --ext .ts",
    "lint:js": "eslint src/frontend/*.js",
    "validate:html": "node scripts/validate-html.cjs",
    "validate:ts": "tsc --noEmit",
    "validate": "npm run validate:ts && npm run validate:html",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "setup:local-auth": "node scripts/setup-local-auth.cjs",
    "token": "node scripts/mint-token.cjs"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.887.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.0.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/sensible": "^5.0.1",
    "@fastify/static": "^7.0.4",
    "@types/aws-sdk": "^0.0.42",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.0",
    "html-entities": "^2.6.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "mustache": "^4.2.0",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.10",
    "pino": "^9.0.0",
    "puppeteer": "^24.20.0",
    "twilio": "^5.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "pino-pretty": "^11.2.2",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.1"
  }
}
