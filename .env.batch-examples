# Mail Service Batch Configuration Examples
# Copy these to your .env file or set as environment variables

# =============================================================================
# TRANSACTIONAL EMAIL CONFIGURATION (Fast, Immediate Delivery)
# =============================================================================
# For user registrations, password resets, order confirmations, etc.
# MAIL_BATCH_SIZE=20
# MAIL_INTER_BATCH_DELAY_MS=0
# MAIL_MAX_EMAILS_PER_HOUR=2000
# MAIL_MAX_EMAILS_PER_DAY=20000

# =============================================================================
# NEWSLETTER/MARKETING CONFIGURATION (Anti-Spam, Spread Delivery)
# =============================================================================
# For newsletters, promotional emails, and large campaigns
# MAIL_BATCH_SIZE=50
# MAIL_INTER_BATCH_DELAY_MS=60000
# MAIL_MAX_EMAILS_PER_HOUR=500
# MAIL_MAX_EMAILS_PER_DAY=5000

# =============================================================================
# CONSERVATIVE/COMPLIANCE CONFIGURATION (Very Safe Delivery)
# =============================================================================
# For environments with strict compliance or deliverability requirements
# MAIL_BATCH_SIZE=25
# MAIL_INTER_BATCH_DELAY_MS=120000
# MAIL_MAX_EMAILS_PER_HOUR=100
# MAIL_MAX_EMAILS_PER_DAY=1000

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================
# For development and testing environments
MAIL_BATCH_SIZE=3
MAIL_INTER_BATCH_DELAY_MS=1000
MAIL_MAX_EMAILS_PER_HOUR=50
MAIL_MAX_EMAILS_PER_DAY=200

# =============================================================================
# SMTP CONFIGURATION
# =============================================================================
# Always enable dry run for testing to avoid sending real emails
SMTP_DRY_RUN=true