# Server
PORT=4001
HOST=0.0.0.0
NODE_ENV=development

# Database (Prisma / MySQL)
DATABASE_URL="mysql://user:password@localhost:3306/mailservice"

# Auth / OAuth2 (placeholder values)
OAUTH_ISSUER=https://auth.example.com
OAUTH_AUDIENCE=mail-service
JWKS_URL=https://auth.example.com/.well-known/jwks.json
REQUIRED_SCOPES=email:send,email:templates

# JWT (internal signing for tracking tokens if needed)
INTERNAL_JWT_SECRET=change_me

# Provider Config (initial simple SMTP via nodemailer)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_ADDRESS="no-reply@example.com"
SMTP_FROM_NAME="Mail Service"

# Scheduler
SCHEDULER_POLL_INTERVAL_MS=5000
MAX_CONCURRENT_SENDS=50

# Logging
LOG_LEVEL=info
